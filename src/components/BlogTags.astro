---
const { tags, className } = Astro.props;
---

<ul class={className}>
  {
    tags.map((tag: string) => (
      <li class="font-normal bg-zinc-200 text-zinc-500 hover:bg-zinc-300 dark:bg-zinc-700/50 dark:text-zinc-400 dark:hover:bg-zinc-800 inline-block mr-2 mb-2 py-1 px-2">
        <a href={`/tag/${tag}`}>{tag}</a>
      </li>
    ))
  }
</ul>
